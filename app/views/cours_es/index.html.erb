<p id="notice"><%= notice %></p>

<h1>Courses</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Duration</th>
      <th>Date start</th>
      <th>Date end</th>
      <th>Place</th>
      <th>Investment</th>
      <th>Info additional</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.ID %></td>
        <td><%= course.NAME %></td>
        <td><%= course.DURATION %></td>
        <td><%= course.DATE_START %></td>
        <td><%= course.DATE_END %></td>
        <td><%= course.PLACE %></td>
        <td><%= course.INVESTMENT %></td>
        <td><%= course.INFO_ADDITIONAL %></td>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

